using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using TMPro;

public class FizzBuzzManager : MonoBehaviour
{
    int max_number;
    public TMP_InPutField max_number_input_field;
    
    public List<int> display_list;
    public TextMeshProUGUI fizz_buzz_display;

    public void StartFizzBuzz()
    {
        display_list.Clear();
        fizz_buzz_display.text="";
        max_number = Int32.Parse(max_number_input_field.text);

        for(int i=1;i<max_number;i++)
        {
            display_list.Add(i);
        }

        FizzBuzzManager(display_list,fizz_buzz_display);

    }

    private string FizzBuzz(List<int> display_list,TextMeshProUGUI fizz_buzz_display)
    {
        foreach (var number in display_list)
        {
            if(number %3==0 &&number%5==0)
            {
                    fizz_buzz_display.text += "Fizz Buzz"+",";
            }
            else if(number %5==0)
            {
                fizz_buzz_display.text+="Buzz"+",";

            }
            else if(number%3==0)
            {
                fizz_buzz_display.text +="Fizz" +",";

            }
            else
            {
                fizz_buzz_display.text +=number +",";
            }
        }
      return fizz_buzz_display.text;
    }
}

